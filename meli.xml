<context>
	<!--Patrones comunes-->
	<pattern name="SiNo" value="((Si|si|yes):1|(No|no):2)"/>
	
	<!--Si dice hola y no esta configurado el perfil-->
	<input pattern="* hola *" if="empty($Configurado) or eq($Cofigurado,'No')">
		<context id="CargarCondicion"/>
	</input>

	<!--Alamcena si prefiere productos nuevos o usados-->
	<pattern name="Condicion" value="(nuev*:1|usad*:2)" >
	<input pattern="* $Condicion *" if="empty($Configurado) or eq($Cofigurado,'No')">
		<context id="CargarCondicion">
			<output value="Hola, soy tu asistente para comprar en mercadolibre, te voy a hacer unas preguntas para buscar mejor. Primera ¿Prefieres productos nuevos o usados?" if="empty($CodigoCondicion)"/>
			<output value="Comenzemos a configurarnos de nuevo, ¿Prefieres productos nuevos o usados?" if="full($CodigoCondicion)"/>
			<sample>
				<item>Nuevos</item>
				<item>Usados</item>
			</sample>
			<var name="$CodigoCondicion" value="new" scope="user" if="eq($Condicion,1)"/>
			<var name="$CodigoCondicion" value="used" scope="user" if="eq($Condicion,2)"/>
			<context id="CargarProvincia" />
		</context>
	</input>

	<!--Patron de provincias disponibles-->
	<pattern name="Provincia">
		<pattern value="(Capital Federal:1|Buenos Aires Sur:2|Cordoba:3)"/>
		<pattern value="(Buenos Aires Oeste:4|Buenos Aires Norte:5|Santa Fe:6)"/>
		<pattern value="(Buenos Aires Atlantica:7|Buenos Aires Interior:8|Tucuman:9)"/>
		<pattern value="(Misiones:10|Mendoza:11|Neuquen:12)"/>
		<pattern value="(La Pampa:13|Jujuy:14|Chaco:15)"/>
		<pattern value="(Formosa:16|La Rioja:17|Rio Negro:18)"/>
		<pattern value="(Salta:19|San Juan:20|Santiago del Estero:21)"/>
		<pattern value="(San Luis:22|Santa Cruz:23)"/>
	</pattern>
	<input pattern="* $Provincia *" if="empty($Configurado) or eq($Cofigurado,'No')">
		<context id="CargarProvincia">
			<output value="¿De cual provincia te gustaria buscar?(Capital Federal,Buenos Aires Sur,Cordoba,Buenos Aires Oeste,Buenos Aires Norte,Santa Fe,Buenos Aires Costa Atlantica,Buenos Aires Interior,Tucuman,Misiones,Mendoza,Neuquen,La Pampa,Jujuy,Chaco,Formosa,La Rioja,Rio Negro,Salta,San Juan,Santiago del Estero,San Luis y Santa Cruz)" />
			<!--Guarda el codigo de la provincia-->
			<var name="CodigoProvincia" value="TUxBUENBUGw3M2E1" scope="user" if="eq($Provincia,1)"/>
			<var name="CodigoProvincia" value="TUxBUEdSQXJlMDNm" scope="user" if="eq($Provincia,2)"/>
			<var name="CodigoProvincia" value="TUxBUENPUmFkZGIw" scope="user" if="eq($Provincia,3)"/>
			<var name="CodigoProvincia" value="TUxBUEdSQWVmNTVm" scope="user" if="eq($Provincia,4)"/>
			<var name="CodigoProvincia" value="TUxBUEdSQWU4ZDkz" scope="user" if="eq($Provincia,5)"/>
			<var name="CodigoProvincia" value="TUxBUFNBTmU5Nzk2" scope="user" if="eq($Provincia,6)"/>
			<var name="CodigoProvincia" value="TUxBUENPU2ExMmFkMw" scope="user" if="eq($Provincia,7)"/>
			<var name="CodigoProvincia" value="TUxBUFpPTmFpbnRl" scope="user" if="eq($Provincia,8)"/>
			<var name="CodigoProvincia" value="TUxBUFRVQ244NmM3" scope="user" if="eq($Provincia,9)"/>
			<var name="CodigoProvincia" value="TUxBUE1JU3MzNjIx" scope="user" if="eq($Provincia,10)"/>
			<var name="CodigoProvincia" value="TUxBUE1FTmE5OWQ4" scope="user" if="eq($Provincia,11)"/>
			<var name="CodigoProvincia" value="TUxBUE5FVW4xMzMzNQ" scope="user" if="eq($Provincia,12)"/>
			<var name="CodigoProvincia" value="TUxBUExBWmE1OWMy" scope="user" if="eq($Provincia,13)"/>
			<var name="CodigoProvincia" value="TUxBUEpVSnk3YmUz" scope="user" if="eq($Provincia,14)"/>
			<var name="CodigoProvincia" value="TUxBUENIQW8xMTNhOA" scope="user" if="eq($Provincia,15)"/>
			<var name="CodigoProvincia" value="TUxBUEZPUmE1OTk5" scope="user" if="eq($Provincia,16)"/>
			<var name="CodigoProvincia" value="TUxBUExBWmEyNzY0" scope="user" if="eq($Provincia,17)"/>
			<var name="CodigoProvincia" value="TUxBUFLNT29iZmZm" scope="user" if="eq($Provincia,18)"/>
			<var name="CodigoProvincia" value="TUxBUFNBTGFjMTJi" scope="user" if="eq($Provincia,19)"/>
			<var name="CodigoProvincia" value="TUxBUFNBTm5lYjU4" scope="user" if="eq($Provincia,20)"/>
			<var name="CodigoProvincia" value="TUxBUFNBTm9lOTlk" scope="user" if="eq($Provincia,21)"/>
			<var name="CodigoProvincia" value="TUxBUFNBTnM0ZTcz" scope="user" if="eq($Provincia,22)"/>
			<var name="CodigoProvincia" value="TUxBUFNBTno3ZmY5" scope="user" if="eq($Provincia,23)"/>
			<context id="CargarTiendaOficial"/>
		</context>		
	</input>

	
	<!--Alamcena si prefiere productos nuevos o usados-->
	<input pattern="* $SiNo *" if="empty($Configurado) or eq($Cofigurado,'No')">
		<context id="CargarTiendaOficial">
			<output value="¿Prefieres comprar en tiendas oficiales?"/>
			<sample>
				<item>Si</item>
				<item>No</item>
			</sample>
			<var name="CodigoTiendaOficial" value="all" scope="user" if="eq($SiNo,'Si')"/>
			<var name="CodigoTiendaOficial" value="" scope="user" if="eq($SiNo,'No')"/>				
			<context id="CargarEnvio" />
		</context>
	</input>			


							

	<!--Si dice hola y ya esta configurado su perfil le pregunta si desea volver  configurar y ademas le recuerda como buscar-->	
	<input pattern="*">	
		<context id="VolverConfigurar" if='full($Configurado) and eq($Configurado,"Si")'>
			<output>
				<item>Recuerda que para realizar una busqueda solo debes ingresar el item con su nombre.</item>
				<item>Ej: Me gustaria comprar un Samsung S8 a 9000 pesos</item>				
				<item>Ya estoy configurado con tus preferencias ¿Deseas hacerlo nuevamente?</item>
			</output>
			<input pattern="* $SiNo"/>
			<sample>
				<item>Si</item>
				<item>No</item>
			</sample>
			<var name="Configurado" value="No" scope="user" if="eq($SiNo,Si)"/>
		</context>
	</input>

	<!--Busqueda de productos especificos-->
	<input pattern="* [(dese|ansi|anhel|apete|aspir|precis|requer|urg|ped|quier|gusta|necesi)*] * [(compr|adquiri|obten|conseg|negoc|trafic|tene|posee|disfrut|guarda|conserva|ver||mirar|revisa|descrubri|intenta|proba|trata|saber de|saber cuanto sale)*] * [(una|un|a|de|en|la|lo)*] {$Busqueda::Text [* $Precio::Number]}">			
		<context id="buscador" if="full($Busqueda)">
			<!--Mensaje de error cuando no se reconoce la busqueda-->
			<output if="empty($Busqueda)">
				<item>No entiendo lo que me quieres decir.</item>
				<item>Puedes probar asi, me gustaria comprar un Samsung S8 a 9000</item>
			</output>
			
			<!--Calcula un rango de precios para el que buscar productos-->
			<var name="PrecioMinimo" value="$Precio * 0.85" scope="context" if="full($Precio)"/>
			<var name="PrecioMaximo" value="$Precio * 1.15" scope="context" if="full($Precio)"/>
			<!-- Realiza una llamada a la api en busca de productos coincidentes -->
			<get url="https://api.mercadolibre.com/sites/MLA/search" var="Resultados">
				<param name="official_store" value="$CodigoTiendaOficial"/>
				<param name="state" value="$CodigoProvincia"/>
				<param name="condition" value="$CodigoCondicion"/>
				<param name="shipping" value="$CodigoEnvioGratis"/>
				<param name="has_pictures" value="yes"/>
				<param name="accepts_mercadopago" value="yes"/>
				<param name="limit" value="3"/>
				<param name="price" value="$PrecioMinimo-$PrecioMaximo" if="full($Precio)"/>
				<param name="sort" value="price_asc"/>
				<param name="q" value="$Busqueda"/>
			</get>
			<!--Obtiene la cantidad de resultados -->
			<var name="CantidadResultados" scope="context" value="get('primary_results',get('paging',$Resultados)"/>
			<!--Informa si no hay resultados -->
			<output if="$CantidadResultados==0">
				<item>No pude encontrar ningun producto que coincida</item>
			</output>
			<!--Muestra un resultado -->
			<var name="Producto" scope="context" value="get(0,get('results',$Resultados))" if="$CantidadResultados>0"/>
			<var name="TituloProducto" scope="context" value="get('title',$Prodcuto)" if="$CantidadResultados>0"/>
			<var name="PrecioProducto" scope="context" value="get('price',$Prodcuto)" if="$CantidadResultados>0"/>
			<var name="MonedaProducto" scope="context" value="get('currency_id',$Prodcuto)" if="$CantidadResultados>0"/>
			<var name="LinkProducto" scope="context" value="get('permalink',$Prodcuto)" if="$CantidadResultados>0"/>
			<var name="ImagenProducto" scope="context" value="get('thumbnail',$Prodcuto)" if="$CantidadResultados>0"/>	
			<output if="$CantidadResultados>0">
				<item>Te encontre este prodcuto de $CantidadResultados productos.</item>
				<item>$TituloProducto</item>
				<item>$PrecioProducto $MonedaProducto</item>
				<item>
					<![CDATA[
						<a href="$LinkProducto"><img src="$ImagenProducto" alt="Ver más"/></a>
					]]>		
				</item>
			</output>
		</context>
	</input>
</context>